@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
    {
    @Html.AntiForgeryToken()
    
        <div class="row">
            <div class="col-xs-9" style="">
                <p>@(Request.Cookies["Language"].Value == "Arabic" ? @User.Identity.GetUserName() + " / مرحبا " : "Hello /" + @User.Identity.GetUserName())</p>

            </div>
            <div class="col-xs-3" style="text-align: left">
                <a href="javascript:document.getElementById('logoutForm').submit()">@(Request.Cookies["Language"].Value == "Arabic" ? "خروج" : "LogOff")</a>

            </div>
        </div>
    
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
