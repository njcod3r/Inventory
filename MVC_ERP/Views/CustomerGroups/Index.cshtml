    <script>

        function getDateFromAspString(aspString) {
            if (aspString == null) { return new Date(Date.now()) }
            var epochMilliseconds = aspString.replace(
                /^\/Date\(([0-9]+)([+-][0-9]{4})?\)\/$/,
                '$1');
            if (epochMilliseconds != aspString) {
                var d = new Date(parseInt(epochMilliseconds));
                return d;
            }
        }


